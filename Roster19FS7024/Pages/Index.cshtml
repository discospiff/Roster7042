@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var shortcuts = (IList<Roster19FS7024.Shortcut>)ViewData["ShortcutList"];
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form method="post">
        <p>Enter your favorite keyboard shortcut here, and what it does.  The shortcut MUST be unique, so check the list of shortcuts first, before posting your own!</p>
        <input type="text" name="FirstName" placeholder="First Name" size="40" />
        <input type="text" name="LastName" placeholder="Last Name" size="40" /><br />
        <input type="text" name="KeyboardShortcut" placeholder="Keyboard Shortcut (keys)" size="40" /><br />
        <input type="text" name="Software" placeholder="Where do you use this shortcut (Visual Studio, Windows, Mac, etc.)" size="80" /><br />
        <input type="text" name="WhatDo" placeholder="What does this shortcut do?" size="120" /><br />
        <input id="Button1" type="submit" value="Submit" />
    </form>
</div>
<div>
    <hr/>
    <table border="1" width="90%">
        <tr><th>First Name</th><th>Last Name</th><th>Shortcut</th><th>Software</th><th>What does it do?</th></tr>
        @{

            foreach (Roster19FS7024.Shortcut shortcut in shortcuts)
            {
                <tr>
                    <td>@shortcut.FirstName</td>
                    <td> @shortcut.LastName </td>
                    <td>@shortcut.KeyboardShortcut</td>
                    <td> @shortcut.Software </td>
                    <td> @shortcut.WhatDo</td>
                </tr>
            }

        }
    </table>
</div>
